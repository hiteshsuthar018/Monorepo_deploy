{
  "name": "monorepodeployee",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate":"cd ./packages/db && bunx prisma generate",
    "backend:start":"cd ./apps/backend && bun run ./src/index.ts",
    "ws:start":"cd ./apps/websocket && bun run ./src/index.ts",
    "frontend:start":"cd ./apps/web && bun run start"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.4",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.6",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
